.like-link{:id => "like-link-#{tweet.id}"}
  - if user_signed_in?
    - if current_user.likes.find_by(tweet_id: tweet.id)
      = link_to unlike_path(tweet.id), method: :delete, remote: true do
        .iine__button
          %i.fas.fa-heart #{tweet.likes.count}
    - else
      = link_to like_path(tweet.id), method: :post, remote: true do
        .iine__button
          ♡️ #{tweet.likes.count}
  - else
    = link_to like_path(tweet.id), method: :post, remote: true do
      .iine__button
        ♡️ #{tweet.likes.count}
